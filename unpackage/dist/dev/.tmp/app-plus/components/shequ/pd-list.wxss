
.pd-list{
	background-color: #fff6df;
}
/*数据列表*/
.pd-li{
	position: relative;
	height: 100%;
	padding: 20rpx 16rpx 0rpx 20rpx;
	border-bottom: 1rpx solid #eee;
}
.pd-li .pd-name{
	font-size: 26rpx;
	/* line-height: 40upx; */
	height: 100%;
	margin-bottom: 20rpx;
	overflow: hidden;
}
.pd-li .pd-price{
	font-size: 26rpx;
	color: gray;
}
.pd-li .pd-sold{
	font-size: 24rpx;
	margin-right: 60rpx;
	color: gray;
	float: right;
}
.pd-number{
	float: right;
	font-size: 24rpx;
	margin-right: 10rpx;
	color: gray;
}

